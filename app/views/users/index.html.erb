<h1>Alpha Bloggers</h1>

<div>
  <% @users.each do | user | %>
  <p><%= link_to user.username, user %></p>
  <p><%= link_to gravatar_for(user, size: 150), user %></p>
  <p><%= pluralize(user.articles.count, "article") %></p>
  <p><%= link_to 'View Profile', user %></p>
  <% if logged_in? %> <% if user == current_user %>
  <p><%= link_to 'Edit Profile', edit_user_path(user) %></p>
  <% end %> <% if current_user.admin? %>
  <p>
    <%= link_to "Delete profile", user_path(current_user), method: :delete,
    data: { confirm: "Are you sure you want to delete the user account and all
    associated articles?" } %>
  </p>
  <% end %> <% end %> <% end %>
</div>
